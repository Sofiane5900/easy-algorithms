---
import BaseLayout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title}>
    <article class="post-content">
        <h2>{frontmatter.title}</h2>
        <ul class="badge__list">
            {frontmatter.author && (
                <li>
                    <span class="badge badge--item">AUTHOR</span>{frontmatter.author}
                </li>
            )}
            <li>
                <span class="badge badge--item">PUBLISHED</span>{frontmatter.date}
            </li>
        </ul>
        <div class="post-body">
            <slot />
        </div>
    </article>
</BaseLayout>

<style>
    .post-content {
        margin-top: 2rem;
    }
    
    .post-content h2 {
        margin: 0;
        text-align: left;
    }
    
    .post-body {
        margin-top: 1.5rem;
    }
    
    .post-image {
        margin: 2rem 0;
        border-radius: 8px;
        overflow: hidden;
    }
    
    .post-image img {
        width: 100%;
        height: auto;
        display: block;
        border-radius: 8px;
    }
</style>
